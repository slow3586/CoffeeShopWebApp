{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "ES2022",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./js/",
    "paths": {
      "ts/*": [
        "./ts/*"
      ],
    }
  },
  "include": ["./js/**/*"],
  "exclude": ["**/*.spec.ts"]
}